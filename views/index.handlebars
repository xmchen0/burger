<h1>Hello Burgers!</h1>

<h2>My Menu</h2>

<ul>
    {{#each burgers}}
    <li>{{name}}</li>
    {{/each}}
</ul>

<h2>My Order</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured it!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Place your order:</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Type here </label>
        <input type="text" id="bu" name="name">

        <button type="submit">Add</button>
    </div>

</form>